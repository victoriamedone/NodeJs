const prompt = require('prompt-sync')();
let x = prompt("Ingrese un día de la semana: ");
let dia = x.toLowerCase();

switch (dia) {
    case "lunes":
        console.log("Hoy es " + dia + ", tienes clases :(.");        
        break;

    case "martes":
        console.log("Hoy es " + dia + ",  no tienes clases :D.");        
        break;

    case "miercoles":
        console.log("Hoy es " + dia + ", tienes clases :(.");        
        break;
    
    case "jueves":
        console.log("Hoy es " + dia + ",  no tienes clases :D.");        
        break;
    
    case "viernes":
        console.log("Hoy es " + dia + ", tienes clases :(.");        
        break;
    
    case "sabado":
        console.log("Hoy es " + dia + ",  no tienes clases :D.");        
        break;
    
    case "domingo":
        console.log("Hoy es " + dia + ",  no tienes clases :D.");        
        break;
    
    default:
        console.log("Por favor ingresa un día válido.")
        break;
}