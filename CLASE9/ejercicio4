const prompt = require('prompt-sync')();
let x = parseInt(prompt("Por favor, ingrese un número entero: "));

let numerosImpares = 0;

function contarImpares(x){
    for (let i = 0; i < x; i++){
    if(i % 2 !== 0){
        numerosImpares++

    } 
  } console.log("La cantidad de números impares desde 0 hasta " + x + " (inclusive) es: " + numerosImpares);
}

console.log(contarImpares(x));

