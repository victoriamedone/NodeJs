
const prompt = require('prompt-sync')();

const calificaciones = [
    "Muy buena",
    "Buena",
    "Mediocre",
    "Mala",
    "Muy mala"
];

console.log("Nuestra escala de calificación: ");
console.log(calificaciones);

let calificacion = prompt("Ahora dinos, qué te pareció la película: ");
let calificacionMin = calificacion.toLowerCase();

switch (calificacionMin) {
    case "muy buena":
        console.log("Votaste '" + calificacionMin + "', nos encanta que te haya encantado!");
        break;

    case "buena":
        console.log("Votaste '" + calificacionMin + "', a nosotrxs también nos gustó.");
        break;
        
    case "mediocre":
        console.log("Votaste '" + calificacionMin + "', tampoco fue para tanto, no?");
        break;

    case "mala":
            console.log("Votaste '" + calificacionMin + "', lamentamos que no haya cumplido con tus estándares");
            break;

     case "muy mala":
            console.log("Votaste '" + calificacionMin + "', I vewy sowy");
            break;

    default:
        console.log("Por favor, ingresa una calificación válida, revisa nuestra lista de calificaciones :)")
        break;
};

console.log("Gracias por tu visita, volvé pronto.");