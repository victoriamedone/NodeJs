const prompt = require('prompt-sync')();

// punto 1
let edad = 24;
let peso = 69;

//punto 2
let nombreUsuario = prompt("Por favor, ingrese su nombre : ");
let edadUsuario = parseInt(prompt("Por favor, ingrese su edad : "));
let pesoUsuario = prompt("Por favor, ingrese su peso : ");

console.log("Usted es " + nombreUsuario + ", tiene " + edadUsuario + " años y pesa " + pesoUsuario + " kg.");

//punto 3

const edadMin = 18;
const edadMax = 99;

function mayorDeEdad(edadUsuario){
    if(edadUsuario >= edadMin && edadUsuario <= edadMax){
        console.log("Perfecto, usted es mayor de edad.");
    } else {
        console.log("Disculpa, no podemos ingresar menores de edad.");
    }
}

console.log(mayorDeEdad(edadUsuario));

// punto 4

let verdadero = true;
