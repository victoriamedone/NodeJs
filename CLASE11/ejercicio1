const prompt = require('prompt-sync')();

let pulgadas = parseFloat(prompt("Ingrese la cant de pulgadas a convertir: "));
function pasarCentimetros(pulgada){
    centimetros = pulgada*2.54;
    return centimetros;
}

let resultado = pasarCentimetros(pulgadas);
console.log("Convertido a centímetros, serían: " + resultado + "cm.");